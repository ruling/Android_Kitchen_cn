cd WORKING_*
working_dir=`pwd`

app_dir=system/etc/product/applications

if [ -d $app_dir ]
then

  apk_files=`find $app_dir -name *.apk`

  if [ "$apk_files" != "" ]
  then
    echo
    echo "在 $app_dir 发现索尼 'bloatware' 应用程序:"
    echo 
    for apk in $apk_files
    do
      echo $apk
    done

    echo
    echo -n "从你的 Working 文件夹删除他们 (y/n)? (默认: y): "

    read do_delete
    echo

    if [ "$do_delete" != "n" ]
    then
      rm -vf $apk_files
    fi
  fi
fi

cd ..


